{
  "name": "rook-ecs",
  "description": "An Entity-Component-System library built for ease of use and code readability",
  "author": "Piotr Szlachciak <szlachciak.piotr@gmail.com>",
  "keywords": [
    "ecs",
    "entity",
    "component",
    "system",
    "javascript",
    "typescript",
    "library"
  ],
  "license": "MIT",
  "version": "0.8.3",
  "main": "lib/cjs/core/index.js",
  "module": "lib/es/core/index.js",
  "typings": "lib/cjs/core/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/sz-piotr/rook-ecs.git"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "rm -rf lib && npm run build:umd && npm run build:es && npm run build:cjs",
    "build:umd": "rollup -c",
    "build:es": "tsc --outDir lib/es --module ES6",
    "build:cjs": "tsc --outDir lib/cjs --module CommonJS",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "jest": "^22.4.4",
    "rollup": "^0.58.2",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.14.0",
    "rollup-plugin-uglify": "^3.0.0",
    "temp-dir": "^1.0.0",
    "ts-jest": "^22.4.6",
    "typescript": "^2.9.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "\\.(test|spec)\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
